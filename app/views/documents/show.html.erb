<h1><%= @doc.name %></h1>

<ul>
    <li>Size: <%= @doc.size %></li>
    <li>Type: <% if @doc.type.nil? %><i>Unknown</i><% else %><%= @doc.type %><% end %></li>
    <% @doc.attrs.each do |key, value| %>
        <li><%= key %>: <%= value %></li>
    <% end %>
</ul>

<% unless @doc.attrs.any? %>
    <p><i>No attributes are defined for this document</i></p>
<% end %>
